generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  devicesQtd Int     @default(1)
  licenses  License[]
  authKey   AuthKey[]

  devices   device[]  
}

model License {
  id            String   @id @default(uuid())
  userId        String
  amount        Float  
  method        String  
  paymentDate   DateTime?
  dueDate       DateTime?
  valid         Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  User      User     @relation(fields: [userId], references: [id])
}

model AuthKey {
  id        String   @id @default(uuid())
  userId    String
  token       String
  privateKey String
  publicKey  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User      User     @relation(fields: [userId], references: [id])
}

model device {
  id        String   @id @default(uuid())
  userId    String
  name      String
  hostname  String
  os        String
  version   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User      User     @relation(fields: [userId], references: [id])
}

